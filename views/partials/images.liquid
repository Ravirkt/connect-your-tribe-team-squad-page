<div class="students-list">
  {% for person in persons %}
    <div class="student">
      <div class="student-inner">
        <!-- Voorzijde: afbeelding -->
        <div class="student-front">
          <img
            src="/assets/{{ person.id }}.png"
            alt="{{ person.name }}"
            onerror="this.src='/assets/default.png';" />
          <div class="student-info">
            <button class="flip-button">MORE</button>
          </div>
        </div>
        <!-- Achterzijde: naam, squad, bio en GitHub -->
        <div class="student-back">
          <p>Name: {{ person.name }}</p>
          <p>Squad:
            {% if person.squads and person.squads[0] %}
              {{ person.squads[0].squad_id.name }}
            {% else %}
              Geen squad
            {% endif %}
          </p>
          <p>Bio:</p>
          {% if person.bio %}
            <div class="scrollable-bio">{{ person.bio }}</div>
          {% else %}
            <p>They told me to write a bio... so I didn‚Äôt. ü§∑‚Äç‚ôÇÔ∏èüöÄ</p>
          {% endif %}

        </div>
      </div>
    </div>
  {% endfor %}
</div>