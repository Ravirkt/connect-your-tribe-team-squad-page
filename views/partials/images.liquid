{% for person in persons %}
  <!-- Een studentkaart -->
  <article class="student">
    <div class="student-inner">

      <!-- Voorzijde: afbeelding en "MORE"-knop -->
      <section class="student-front">
        <img
          src="/assets/{{ person.id }}.png"
          alt="{{ person.name }}"
          onerror="this.src='/assets/default.png';">
        <div class="student-info">
          <button
            class="flip-button"
            role="button"
            aria-label="Meer informatie over {{ person.name }}">MORE</button>
        </div>
      </section>

      <!-- Achterzijde: naam, squad en bio -->
      <section class="student-back" aria-hidden="true" aria-live="polite">
        <!-- Naam van de student -->
        <h2>{{ person.name }}</h2>

        <!-- Squad-gegevens -->
        <p>
          <strong>Squad:</strong>
          {% if person.squads and person.squads[0] %}
            {{ person.squads[0].squad_id.name }}
          {% else %}
            Geen squad
          {% endif %}
        </p>

        <!-- Biografie -->
        <h3>Bio:</h3>
        {% if person.bio %}
          <div class="scrollable-bio">{{ person.bio }}</div>
        {% else %}
          <p>They told me to write a bio... so I didn‚Äôt. ü§∑‚Äç‚ôÇÔ∏èüöÄ</p>
        {% endif %}
      </section>

    </div>
  </article>
{% endfor %}